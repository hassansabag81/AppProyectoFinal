<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/botonAlerta"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/help_buttonn"
            android:contentDescription="helper"
            android:scaleType="fitCenter"
            android:src="@drawable/helper" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/call911"
                android:layout_width="250dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#5A4162"
                android:text="Llamar al 911"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:icon="@drawable/tele"
                app:iconSize="30dp"
                app:iconTint="#FFFFFF" />


            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/callSP"
                android:layout_width="250dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#5A4162"
                android:text="Llamar a Seguridad PÃºblica"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:icon="@drawable/tele"
                app:iconPadding="10dp"
                app:iconSize="20dp"
                app:iconTint="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
