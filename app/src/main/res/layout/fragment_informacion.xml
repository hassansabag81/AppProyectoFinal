<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="61dp" />

    <Button
        android:id="@+id/alertaButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#5A4162"
        android:text="Alerta"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:icon="@drawable/alerta"
        app:iconPadding="-40dp"
        app:iconSize="40dp" />


    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="19dp" />


    <Button
        android:id="@+id/violenciaButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#5A4162"
        android:text="Tipos de violencia"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:icon="@drawable/enojado"
        app:iconSize="40dp" />


    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="19dp" />


    <Button
        android:id="@+id/modalidadButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#5A4162"
        android:text="Modalidades de violencia"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:icon="@drawable/furia"
        app:iconSize="40dp" />


    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="19dp" />


    <Button
        android:id="@+id/centrosButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#5A4162"
        android:text="Centros de información"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:icon="@drawable/cinfo"
        app:iconSize="40dp" />


    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="19dp" />

    <Button
        android:id="@+id/atencionButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#5A4162"
        android:text="Números de atención"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:icon="@drawable/llamada"
        app:iconPadding="-30dp"
        app:iconSize="40dp" />


    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="19dp" />

    <Button
        android:id="@+id/violentometroButton"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#5A4162"
        android:text="Violentometro"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:icon="@drawable/medidor"
        app:iconPadding="-40dp"
        app:iconSize="40dp" />


</LinearLayout>